{
  "name": "watson-speech",
  "version": "0.3.0",
  "description": "IBM Watson Speech to Text SDK for web browsers.",
  "main": "index.js",
  "scripts": {
    "start": "karma start test/resources/karma.conf.js",
    "lint": "eslint --config test/resources/.eslintrc.js *.js src/*.js",
    "test": "karma start test/resources/karma.conf.js --single-run",
    "test-integration": "TEST_MODE=integration karma start test/resources/karma.conf.js --single-run",
    "watch": "karma start",
    "browserify": "browserify index.js --standalone WatsonSpeech --outfile dist/watson-speech.js",
    "watchify": "watchify index.js --standalone WatsonSpeech --outfile dist/watson-speech.js --debug --verbose",
    "build": "npm run browserify"
  },
  "author": "Nathan Friedly <http://nfriedly.com>",
  "devDependencies": {
    "browserify": "^13.0.0",
    "concat-stream": "^1.5.1",
    "eslint": "^1.10.3",
    "eslint-config-google": "^0.3.0",
    "expect.js": "^0.3.1",
    "karma": "^0.13.19",
    "karma-browserify": "^5.0.1",
    "karma-chrome-launcher": "^0.2.2",
    "karma-express-http-server": "0.0.1",
    "karma-mocha": "^0.2.1",
    "mocha": "^2.4.4",
    "serve-static": "^1.10.2",
    "watchify": "^3.7.0",
    "watson-developer-cloud": "^1.2.1",
    "whatwg-fetch": "^0.11.0"
  },
  "dependencies": {
    "filereader-stream": "^1.0.0",
    "getusermedia": "^1.3.5",
    "lodash": "^4.0.1",
    "microphone-stream": "^2.0.2",
    "websocket": "^1.0.22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/watson-developer-cloud/speech-javascript-sdk.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/watson-developer-cloud/speech-javascript-sdk/issues"
  }
}
